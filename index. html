    <script>
        // ===== GLOBAL VARIABLES =====
        let currentUser = null;
        let systemData = {
            users: [],
            students: [],
            payments: [],
            exams: [],
            feeCategories: [
                { id: 'tuition', name: 'Tuition Fee', amount: 500, description: 'Main academic fee', appliesTo: 'all' },
